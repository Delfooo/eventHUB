<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/event-detail.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="container">
            <a href="/" class="logo">
                <i class="fas fa-calendar-alt"></i>
                EventHub
            </a>
            
            <div class="nav-links" id="navLinks">
                <a href="/" class="nav-link">
                    <i class="fas fa-home"></i> Home
                </a>
                
                <div id="authLinks" style="display: none;">
                    <a href="/dashboard" class="nav-link">
                        <i class="fas fa-th-large"></i> Dashboard
                    </a>
                    <a href="/my-events" class="nav-link">
                        <i class="fas fa-calendar-check"></i> I Miei Eventi
                    </a>
                    <a href="/profile" class="nav-link">
                        <i class="fas fa-user"></i> Profilo
                    </a>
                    <a href="/admin" class="nav-link admin-only" id="adminLink" style="display: none;">
                        <i class="fas fa-shield-alt"></i> Admin
                    </a>
                    <button class="btn btn-danger btn-sm" onclick="logout()">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </div>
                
                <div id="guestLinks">
                    <a href="/login" class="nav-link">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                    <a href="/register" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i> Registrati
                    </a>
                </div>
            </div>
            
            <button class="hamburger" id="hamburger">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </nav>

    <!-- Alert Container -->
    <div id="alertContainer"></div>

    <!-- Loading State -->
    <div id="loadingState" class="loading-container">
        <i class="fas fa-spinner fa-spin"></i>
        <p>Caricamento evento...</p>
    </div>

    <!-- Main Content -->
    <main class="event-detail-main" id="eventDetailMain" style="display: none;">
        
        <!-- Event Header -->
        <section class="event-header">
            <div class="event-header-overlay"></div>
            <div class="event-header-content container">
                <button class="btn-back" onclick="window.history.back()">
                    <i class="fas fa-arrow-left"></i> Indietro
                </button>
                
                <div class="event-header-info">
                    <span class="event-category-badge" id="eventCategory">Musica</span>
                    <h1 class="event-title" id="eventTitle">Caricamento...</h1>
                    
                    <div class="event-meta-header">
                        <div class="meta-item">
                            <i class="fas fa-calendar"></i>
                            <span id="eventDate">--</span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-clock"></i>
                            <span id="eventTime">--</span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span id="eventLocation">--</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Event Content -->
        <div class="event-content container">
            <div class="event-main-content">
                
                <!-- Event Image -->
                <div class="event-image-section">
                    <img 
                        id="eventImage" 
                        src="https://via.placeholder.com/800x400?text=EventHub" 
                        alt="Event"
                        class="event-detail-image"
                    >
                </div>

                <!-- Description -->
                <div class="event-section">
                    <h2>
                        <i class="fas fa-info-circle"></i>
                        Descrizione
                    </h2>
                    <p id="eventDescription" class="event-description">
                        Caricamento descrizione...
                    </p>
                </div>

                <!-- Organizer Info -->
                <div class="event-section">
                    <h2>
                        <i class="fas fa-user-tie"></i>
                        Organizzatore
                    </h2>
                    <div class="organizer-card">
                        <div class="organizer-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="organizer-info">
                            <h3 id="organizerName">--</h3>
                            <p id="organizerEmail">--</p>
                        </div>
                    </div>
                </div>

                <!-- Attendees -->
                <div class="event-section">
                    <h2>
                        <i class="fas fa-users"></i>
                        Partecipanti
                        <span class="attendees-count" id="attendeesCountText">(0/0)</span>
                    </h2>
                    
                    <div class="capacity-indicator">
                        <div class="capacity-bar">
                            <div class="capacity-fill" id="capacityFill" style="width: 0%"></div>
                        </div>
                        <p class="capacity-text">
                            <span id="attendeesCount">0</span> partecipanti su 
                            <span id="eventCapacity">0</span> posti disponibili
                        </p>
                    </div>

                    <div id="attendeesList" class="attendees-list">
                        <!-- Popolato dinamicamente -->
                    </div>
                </div>

                <!-- Chat Section (Solo per partecipanti) -->
                <div class="event-section" id="chatSection" style="display: none;">
                    <h2>
                        <i class="fas fa-comments"></i>
                        Chat Evento
                    </h2>
                    
                    <div class="chat-container">
                        <div class="chat-messages" id="chatMessages">
                            <p class="chat-empty">Nessun messaggio. Sii il primo a scrivere!</p>
                        </div>
                        
                        <form class="chat-form" id="chatForm">
                            <input 
                                type="text" 
                                id="chatInput" 
                                placeholder="Scrivi un messaggio..."
                                maxlength="500"
                                required
                            >
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </form>
                    </div>
                </div>

            </div>

            <!-- Sidebar -->
            <aside class="event-sidebar">
                
                <!-- Action Card -->
                <div class="sidebar-card action-card">
                    <div class="price-tag">
                        <i class="fas fa-ticket-alt"></i>
                        <span>Gratuito</span>
                    </div>
                    
                    <div id="actionButtons">
                        <!-- Popolato dinamicamente in base allo stato utente -->
                    </div>

                    <button class="btn btn-secondary btn-block" onclick="shareEvent()">
                        <i class="fas fa-share-alt"></i> Condividi Evento
                    </button>
                </div>

                <!-- Event Details Card -->
                <div class="sidebar-card">
                    <h3>Dettagli Evento</h3>
                    
                    <div class="detail-item">
                        <i class="fas fa-calendar-alt"></i>
                        <div>
                            <strong>Data</strong>
                            <span id="sidebarDate">--</span>
                        </div>
                    </div>

                    <div class="detail-item">
                        <i class="fas fa-clock"></i>
                        <div>
                            <strong>Ora</strong>
                            <span id="sidebarTime">--</span>
                        </div>
                    </div>

                    <div class="detail-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <strong>Luogo</strong>
                            <span id="sidebarLocation">--</span>
                        </div>
                    </div>

                    <div class="detail-item">
                        <i class="fas fa-users"></i>
                        <div>
                            <strong>Capienza</strong>
                            <span id="sidebarCapacity">--</span>
                        </div>
                    </div>

                    <div class="detail-item">
                        <i class="fas fa-tags"></i>
                        <div>
                            <strong>Categoria</strong>
                            <span id="sidebarCategory">--</span>
                        </div>
                    </div>
                </div>

                <!-- Report Card (Solo per utenti loggati) -->
                <div class="sidebar-card" id="reportCard" style="display: none;">
                    <button class="btn btn-outline btn-block" onclick="reportEvent()">
                        <i class="fas fa-flag"></i> Segnala Evento
                    </button>
                </div>

            </aside>
        </div>

    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 EventHub. Tutti i diritti riservati.</p>
            <div class="footer-links">
                <a href="#">Privacy Policy</a>
                <a href="#">Termini di Servizio</a>
                <a href="#">Contatti</a>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="/js/utils.js"></script>
    <script src="/js/event-detail.js"></script>
    <script>
        checkAuthStatus();
        
        // Ottieni ID evento dalla URL
        const eventId = window.location.pathname.split('/').pop();
        if (eventId) {
            loadEventDetail(eventId);
        } else {
            window.location.href = '/';
        }
    </script>
</body>
</html>