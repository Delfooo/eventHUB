<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="auth-page">
    <!-- Navbar semplificata -->
    <nav class="navbar">
        <div class="container">
            <a href="/" class="logo">
                <i class="fas fa-calendar-alt"></i>
                EventHub
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Torna alla Home
            </a>
        </div>
    </nav>

    <main class="auth-container">
        <div class="auth-card">
            <!-- Header -->
            <div class="auth-header">
                <i class="fas fa-user-plus auth-icon"></i>
                <h1>Unisciti a EventHub</h1>
                <p>Crea il tuo account e inizia a scoprire eventi</p>
            </div>

            <!-- Alert per messaggi di errore/successo -->
            <div id="alertContainer"></div>

            <!-- Form di Registrazione -->
            <form id="registerForm" class="auth-form">
                <div class="form-group">
                    <label for="username">
                        <i class="fas fa-user"></i>
                        Username
                    </label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username" 
                        placeholder="Il tuo username"
                        required
                        minlength="3"
                        maxlength="30"
                        pattern="[a-zA-Z0-9_]+"
                        title="Solo lettere, numeri e underscore"
                    >
                    <small class="form-hint">Minimo 3 caratteri, solo lettere, numeri e underscore</small>
                </div>

                <div class="form-group">
                    <label for="email">
                        <i class="fas fa-envelope"></i>
                        Email
                    </label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        placeholder="tua@email.com"
                        required
                        autocomplete="email"
                    >
                </div>

                <div class="form-group">
                    <label for="password">
                        <i class="fas fa-lock"></i>
                        Password
                    </label>
                    <div class="password-input">
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            placeholder="••••••••"
                            required
                            minlength="6"
                            autocomplete="new-password"
                        >
                        <button type="button" class="toggle-password" onclick="togglePassword('password')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <small class="form-hint">Minimo 6 caratteri</small>
                    <!-- Password strength indicator -->
                    <div class="password-strength" id="passwordStrength">
                        <div class="strength-bar"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">
                        <i class="fas fa-lock"></i>
                        Conferma Password
                    </label>
                    <div class="password-input">
                        <input 
                            type="password" 
                            id="confirmPassword" 
                            name="confirmPassword" 
                            placeholder="••••••••"
                            required
                            minlength="6"
                            autocomplete="new-password"
                        >
                        <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="terms" name="terms" required>
                        <span>Accetto i <a href="/terms" target="_blank">Termini e Condizioni</a> e la <a href="/privacy" target="_blank">Privacy Policy</a></span>
                    </label>
                </div>

                <button type="submit" class="btn btn-primary btn-block" id="registerBtn">
                    <i class="fas fa-user-plus"></i>
                    Registrati
                </button>
            </form>

            <!-- Divider -->
            <div class="auth-divider">
                <span>oppure</span>
            </div>

            <!-- Link login -->
            <div class="auth-footer">
                <p>Hai già un account?</p>
                <a href="/login" class="btn btn-outline btn-block">
                    <i class="fas fa-sign-in-alt"></i>
                    Accedi ora
                </a>
            </div>
        </div>

        <!-- Info box laterale (opzionale) -->
        <div class="auth-info">
            <h2>Perché EventHub?</h2>
            <ul>
                <li>
                    <i class="fas fa-rocket"></i>
                    <strong>Facile e Veloce</strong><br>
                    Registrazione in meno di 30 secondi
                </li>
                <li>
                    <i class="fas fa-shield-alt"></i>
                    <strong>Sicuro</strong><br>
                    I tuoi dati sono protetti
                </li>
                <li>
                    <i class="fas fa-users"></i>
                    <strong>Community</strong><br>
                    Unisciti a migliaia di utenti
                </li>
                <li>
                    <i class="fas fa-bell"></i>
                    <strong>Sempre Aggiornato</strong><br>
                    Notifiche in tempo reale
                </li>
            </ul>
        </div>
    </main>

    <!-- JavaScript -->
    <script src="/js/utils.js"></script>
    <script>
        // Configurazione API
        const API_URL = 'http://localhost:3000/api';

        // Password strength checker
        document.getElementById('password').addEventListener('input', (e) => {
            const password = e.target.value;
            const strengthBar = document.querySelector('.strength-bar');
            const strengthContainer = document.getElementById('passwordStrength');
            
            let strength = 0;
            if (password.length >= 6) strength++;
            if (password.length >= 10) strength++;
            if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^a-zA-Z0-9]/.test(password)) strength++;
            
            const colors = ['#e74c3c', '#e67e22', '#f39c12', '#2ecc71', '#27ae60'];
            const labels = ['Molto debole', 'Debole', 'Media', 'Forte', 'Molto forte'];
            
            strengthBar.style.width = (strength * 20) + '%';
            strengthBar.style.backgroundColor = colors[strength - 1] || '#e74c3c';
            strengthContainer.setAttribute('data-label', labels[strength - 1] || '');
        });

        // Gestione submit form registrazione
        document.getElementById('registerForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const registerBtn = document.getElementById('registerBtn');
            const username = document.getElementById('username').value.trim();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const terms = document.getElementById('terms').checked;
            
            // Validazioni lato client
            if (password !== confirmPassword) {
                showAlert('Le password non coincidono', 'error');
                return;
            }
            
            if (!terms) {
                showAlert('Devi accettare i Termini e Condizioni', 'error');
                return;
            }
            
            // Disabilita il bottone durante la richiesta
            registerBtn.disabled = true;
            registerBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Registrazione in corso...';
            
            try {
                const response = await fetch(`${API_URL}/auth/register`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username, email, password })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Salva il token nel localStorage
                    localStorage.setItem('token', data.data.token);
                    localStorage.setItem('user', JSON.stringify(data.data.user));
                    
                    showAlert('Registrazione completata con successo!', 'success');
                    
                    // Reindirizza alla dashboard
                    setTimeout(() => {
                        window.location.href = '/dashboard';
                    }, 1500);
                } else {
                    showAlert(data.message || 'Errore durante la registrazione', 'error');
                    registerBtn.disabled = false;
                    registerBtn.innerHTML = '<i class="fas fa-user-plus"></i> Registrati';
                }
            } catch (error) {
                console.error('Errore:', error);
                showAlert('Errore di connessione al server', 'error');
                registerBtn.disabled = false;
                registerBtn.innerHTML = '<i class="fas fa-user-plus"></i> Registrati';
            }
        });
        
        // Funzione per mostrare/nascondere password
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
        
        // Funzione per mostrare alert
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alertClass = type === 'success' ? 'alert-success' : 'alert-error';
            
            alertContainer.innerHTML = `
                <div class="alert ${alertClass}">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;
            
            // Rimuovi alert dopo 5 secondi
            setTimeout(() => {
                alertContainer.innerHTML = '';
            }, 5000);
        }
    </script>
</body>
</html>