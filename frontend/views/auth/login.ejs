<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="auth-page">
    <!-- Navbar semplificata -->
    <nav class="navbar">
        <div class="container">
            <a href="/" class="logo">
                <i class="fas fa-calendar-alt"></i>
                EventHub
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Torna alla Home
            </a>
        </div>
    </nav>

    <main class="auth-container">
        <div class="auth-card">
            <!-- Header -->
            <div class="auth-header">
                <i class="fas fa-sign-in-alt auth-icon"></i>
                <h1>Accedi a EventHub</h1>
                <p>Bentornato! Inserisci le tue credenziali</p>
            </div>

            <!-- Alert per messaggi di errore/successo -->
            <div id="alertContainer"></div>

            <!-- Form di Login -->
            <form id="loginForm" class="auth-form">
                <div class="form-group">
                    <label for="email">
                        <i class="fas fa-envelope"></i>
                        Email
                    </label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        placeholder="tua@email.com"
                        required
                        autocomplete="email"
                    >
                </div>

                <div class="form-group">
                    <label for="password">
                        <i class="fas fa-lock"></i>
                        Password
                    </label>
                    <div class="password-input">
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            placeholder="••••••••"
                            required
                            autocomplete="current-password"
                            minlength="6"
                        >
                        <button type="button" class="toggle-password" onclick="togglePassword('password')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="form-footer">
                    <label class="checkbox-label">
                        <input type="checkbox" id="remember" name="remember">
                        <span>Ricordami</span>
                    </label>
                    <a href="/forgot-password" class="link">Password dimenticata?</a>
                </div>

                <button type="submit" class="btn btn-primary btn-block" id="loginBtn">
                    <i class="fas fa-sign-in-alt"></i>
                    Accedi
                </button>
            </form>

            <!-- Divider -->
            <div class="auth-divider">
                <span>oppure</span>
            </div>

            <!-- Link registrazione -->
            <div class="auth-footer">
                <p>Non hai un account?</p>
                <a href="/register" class="btn btn-outline btn-block">
                    <i class="fas fa-user-plus"></i>
                    Registrati ora
                </a>
            </div>
        </div>

        <!-- Info box laterale (opzionale) -->
        <div class="auth-info">
            <h2>Benvenuto su EventHub</h2>
            <ul>
                <li>
                    <i class="fas fa-check-circle"></i>
                    Scopri eventi nella tua città
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    Crea e gestisci i tuoi eventi
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    Chatta con altri partecipanti
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    Ricevi notifiche in tempo reale
                </li>
            </ul>
        </div>
    </main>

    <!-- JavaScript -->
    <script src="/js/utils.js"></script>
    <script>
        // Configurazione API
        const API_URL = 'http://localhost:3000/api';

        // Gestione submit form login
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const loginBtn = document.getElementById('loginBtn');
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            // Disabilita il bottone durante la richiesta
            loginBtn.disabled = true;
            loginBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Accesso in corso...';
            
            try {
                const response = await fetch(`${API_URL}/auth/login`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email, password })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Salva il token nel localStorage
                    localStorage.setItem('token', data.data.token);
                    localStorage.setItem('user', JSON.stringify(data.data.user));
                    
                    showAlert('Login effettuato con successo!', 'success');
                    
                    // Reindirizza in base al ruolo
                    setTimeout(() => {
                        if (data.data.user.role === 'admin') {
                            window.location.href = '/admin';
                        } else {
                            window.location.href = '/dashboard';
                        }
                    }, 1000);
                } else {
                    showAlert(data.message || 'Errore durante il login', 'error');
                    loginBtn.disabled = false;
                    loginBtn.innerHTML = '<i class="fas fa-sign-in-alt"></i> Accedi';
                }
            } catch (error) {
                console.error('Errore:', error);
                showAlert('Errore di connessione al server', 'error');
                loginBtn.disabled = false;
                loginBtn.innerHTML = '<i class="fas fa-sign-in-alt"></i> Accedi';
            }
        });
        
        // Funzione per mostrare/nascondere password
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
        
        // Funzione per mostrare alert
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alertClass = type === 'success' ? 'alert-success' : 'alert-error';
            
            alertContainer.innerHTML = `
                <div class="alert ${alertClass}">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;
            
            // Rimuovi alert dopo 5 secondi
            setTimeout(() => {
                alertContainer.innerHTML = '';
            }, 5000);
        }
    </script>
</body>
</html>