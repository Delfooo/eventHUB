<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="container">
            <a href="/" class="logo">
                <i class="fas fa-calendar-alt"></i>
                EventHub
            </a>
            
            <div class="nav-links" id="navLinks">
                <a href="/" class="nav-link">
                    <i class="fas fa-home"></i> Home
                </a>
                <a href="/dashboard" class="nav-link">
                    <i class="fas fa-th-large"></i> Dashboard
                </a>
                <a href="/admin" class="nav-link active">
                    <i class="fas fa-shield-alt"></i> Admin
                </a>
                
                <button class="btn btn-danger btn-sm" onclick="logout()">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
            
            <button class="hamburger" id="hamburger">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="admin-main">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="admin-header">
                <div class="admin-badge">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Pannello Admin</h3>
                <p id="adminName">Caricamento...</p>
            </div>

            <nav class="admin-nav">
                <a href="#overview" class="admin-nav-link active" data-section="overview">
                    <i class="fas fa-chart-line"></i>
                    <span>Panoramica</span>
                </a>
                <a href="#users" class="admin-nav-link" data-section="users">
                    <i class="fas fa-users"></i>
                    <span>Gestione Utenti</span>
                </a>
                <a href="#events" class="admin-nav-link" data-section="events">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Gestione Eventi</span>
                </a>
                <a href="#reports" class="admin-nav-link" data-section="reports">
                    <i class="fas fa-flag"></i>
                    <span>Segnalazioni</span>
                    <span class="badge" id="reportsBadge">0</span>
                </a>
                <a href="#analytics" class="admin-nav-link" data-section="analytics">
                    <i class="fas fa-chart-bar"></i>
                    <span>Analytics</span>
                </a>
            </nav>

            <div class="admin-footer">
                <a href="/dashboard" class="btn btn-secondary btn-block">
                    <i class="fas fa-arrow-left"></i> Dashboard Utente
                </a>
            </div>
        </aside>

        <!-- Content Area -->
        <div class="admin-content">
            <!-- Alert Container -->
            <div id="alertContainer"></div>

            <!-- SEZIONE PANORAMICA -->
            <section id="overview-section" class="admin-section active">
                <div class="admin-section-header">
                    <div>
                        <h1>
                            <i class="fas fa-chart-line"></i>
                            Panoramica Sistema
                        </h1>
                        <p class="section-subtitle">Statistiche generali della piattaforma</p>
                    </div>
                    <button class="btn btn-primary" onclick="refreshStats()">
                        <i class="fas fa-sync-alt"></i> Aggiorna
                    </button>
                </div>

                <!-- Stats Grid -->
                <div class="admin-stats-grid">
                    <div class="admin-stat-card">
                        <div class="stat-header">
                            <div class="stat-icon blue">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-trend up">
                                <i class="fas fa-arrow-up"></i>
                                <span>+12%</span>
                            </div>
                        </div>
                        <div class="stat-body">
                            <h3 id="totalUsers">0</h3>
                            <p>Utenti Totali</p>
                            <div class="stat-progress">
                                <div class="progress-bar blue" style="width: 75%"></div>
                            </div>
                        </div>
                    </div>

                    <div class="admin-stat-card">
                        <div class="stat-header">
                            <div class="stat-icon green">
                                <i class="fas fa-user-check"></i>
                            </div>
                            <div class="stat-trend up">
                                <i class="fas fa-arrow-up"></i>
                                <span>+8%</span>
                            </div>
                        </div>
                        <div class="stat-body">
                            <h3 id="activeUsers">0</h3>
                            <p>Utenti Attivi</p>
                            <div class="stat-progress">
                                <div class="progress-bar green" style="width: 85%"></div>
                            </div>
                        </div>
                    </div>

                    <div class="admin-stat-card">
                        <div class="stat-header">
                            <div class="stat-icon red">
                                <i class="fas fa-user-slash"></i>
                            </div>
                            <div class="stat-trend down">
                                <i class="fas fa-arrow-down"></i>
                                <span>-3%</span>
                            </div>
                        </div>
                        <div class="stat-body">
                            <h3 id="blockedUsers">0</h3>
                            <p>Utenti Bloccati</p>
                            <div class="stat-progress">
                                <div class="progress-bar red" style="width: 15%"></div>
                            </div>
                        </div>
                    </div>

                    <div class="admin-stat-card">
                        <div class="stat-header">
                            <div class="stat-icon purple">
                                <i class="fas fa-user-shield"></i>
                            </div>
                            <div class="stat-trend neutral">
                                <i class="fas fa-minus"></i>
                                <span>0%</span>
                            </div>
                        </div>
                        <div class="stat-body">
                            <h3 id="adminUsers">0</h3>
                            <p>Amministratori</p>
                            <div class="stat-progress">
                                <div class="progress-bar purple" style="width: 10%"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Stats -->
                <div class="additional-stats">
                    <div class="stat-box">
                        <i class="fas fa-calendar-plus"></i>
                        <div>
                            <h4 id="totalEvents">0</h4>
                            <p>Eventi Totali</p>
                        </div>
                    </div>
                    <div class="stat-box">
                        <i class="fas fa-user-plus"></i>
                        <div>
                            <h4 id="recentUsers">0</h4>
                            <p>Nuovi Utenti (30gg)</p>
                        </div>
                    </div>
                    <div class="stat-box">
                        <i class="fas fa-percentage"></i>
                        <div>
                            <h4 id="activityRate">0%</h4>
                            <p>Tasso di Attività</p>
                        </div>
                    </div>
                    <div class="stat-box">
                        <i class="fas fa-users-cog"></i>
                        <div>
                            <h4 id="regularUsers">0</h4>
                            <p>Utenti Standard</p>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="quick-actions-admin">
                    <h2>Azioni Rapide</h2>
                    <div class="actions-grid-admin">
                        <button class="action-btn" onclick="switchSection('users')">
                            <i class="fas fa-users"></i>
                            <span>Gestisci Utenti</span>
                        </button>
                        <button class="action-btn" onclick="switchSection('events')">
                            <i class="fas fa-calendar-check"></i>
                            <span>Modera Eventi</span>
                        </button>
                        <button class="action-btn" onclick="exportData()">
                            <i class="fas fa-download"></i>
                            <span>Esporta Dati</span>
                        </button>
                        <button class="action-btn" onclick="switchSection('reports')">
                            <i class="fas fa-flag"></i>
                            <span>Segnalazioni</span>
                        </button>
                    </div>
                </div>
            </section>

            <!-- SEZIONE GESTIONE UTENTI -->
            <section id="users-section" class="admin-section">
                <div class="admin-section-header">
                    <div>
                        <h1>
                            <i class="fas fa-users"></i>
                            Gestione Utenti
                        </h1>
                        <p class="section-subtitle">Visualizza e gestisci tutti gli utenti della piattaforma</p>
                    </div>
                    <div class="header-actions">
                        <input 
                            type="text" 
                            id="userSearchInput" 
                            placeholder="Cerca utente..."
                            class="search-input"
                            onkeyup="filterUsers()"
                        >
                        <button class="btn btn-primary" onclick="loadUsers()">
                            <i class="fas fa-sync-alt"></i> Ricarica
                        </button>
                    </div>
                </div>

                <div id="usersLoading" class="loading-state">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>Caricamento utenti...</p>
                </div>

                <div id="usersTable" class="table-container">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Ruolo</th>
                                <th>Stato</th>
                                <th>Registrato</th>
                                <th>Ultimo Login</th>
                                <th>Azioni</th>
                            </tr>
                        </thead>
                        <tbody id="usersTableBody">
                            <!-- Popolato dinamicamente -->
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- SEZIONE GESTIONE EVENTI -->
            <section id="events-section" class="admin-section">
                <div class="admin-section-header">
                    <div>
                        <h1>
                            <i class="fas fa-calendar-alt"></i>
                            Gestione Eventi
                        </h1>
                        <p class="section-subtitle">Visualizza e modera tutti gli eventi</p>
                    </div>
                    <button class="btn btn-primary" onclick="loadAllEvents()">
                        <i class="fas fa-sync-alt"></i> Ricarica
                    </button>
                </div>

                <div id="eventsLoading" class="loading-state">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>Caricamento eventi...</p>
                </div>

                <div id="eventsList" class="admin-events-list">
                    <!-- Popolato dinamicamente -->
                </div>
            </section>

            <!-- SEZIONE SEGNALAZIONI -->
            <section id="reports-section" class="admin-section">
                <div class="admin-section-header">
                    <div>
                        <h1>
                            <i class="fas fa-flag"></i>
                            Segnalazioni
                        </h1>
                        <p class="section-subtitle">Gestisci le segnalazioni degli utenti</p>
                    </div>
                </div>

                <div class="reports-list">
                    <div class="empty-state">
                        <i class="fas fa-check-circle"></i>
                        <h3>Nessuna segnalazione</h3>
                        <p>Al momento non ci sono segnalazioni da gestire</p>
                    </div>
                </div>
            </section>

            <!-- SEZIONE ANALYTICS -->
            <section id="analytics-section" class="admin-section">
                <div class="admin-section-header">
                    <div>
                        <h1>
                            <i class="fas fa-chart-bar"></i>
                            Analytics
                        </h1>
                        <p class="section-subtitle">Analisi dettagliate della piattaforma</p>
                    </div>
                </div>

                <div class="analytics-placeholder">
                    <i class="fas fa-chart-line"></i>
                    <h3>Analytics in Sviluppo</h3>
                    <p>Questa sezione conterrà grafici e analisi dettagliate</p>
                </div>
            </section>

        </div>
    </main>

    <!-- Modal Conferma Azione -->
    <div id="confirmModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Conferma Azione</h3>
                <button class="modal-close" onclick="closeModal()">&times;</button>
            </div>
            <div class="modal-body">
                <p id="modalMessage">Sei sicuro di voler procedere?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeModal()">Annulla</button>
                <button class="btn btn-primary" id="modalConfirmBtn" onclick="confirmAction()">Conferma</button>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="/js/utils.js"></script>
    <script src="/js/admin.js"></script>
    <script>
        // Verifica autenticazione e ruolo admin
        if (!requireAdmin()) {
            window.location.href = '/';
        } else {
            checkAuthStatus();
        }
    </script>
</body>
</html>