<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="container">
            <a href="/" class="logo">
                <i class="fas fa-calendar-alt"></i>
                EventHub
            </a>
            
            <div class="nav-links" id="navLinks">
                <a href="/" class="nav-link">
                    <i class="fas fa-home"></i> Home
                </a>
                <a href="/dashboard" class="nav-link active">
                    <i class="fas fa-th-large"></i> Dashboard
                </a>
                <a href="/my-events" class="nav-link">
                    <i class="fas fa-calendar-check"></i> I Miei Eventi
                </a>
                <a href="/profile" class="nav-link">
                    <i class="fas fa-user"></i> Profilo
                </a>
                
                <!-- Link admin -->
                <a href="/admin" class="nav-link admin-only" id="adminLink" style="display: none;">
                    <i class="fas fa-shield-alt"></i> Admin
                </a>
                
                <button class="btn btn-danger btn-sm" onclick="logout()">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
            
            <button class="hamburger" id="hamburger">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="dashboard-main">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="user-info">
                <div class="user-avatar" id="userAvatar">
                    <i class="fas fa-user"></i>
                </div>
                <h3 class="user-name" id="userName">Caricamento...</h3>
                <p class="user-email" id="userEmail"></p>
                <span class="user-role" id="userRole"></span>
            </div>

            <nav class="sidebar-nav">
                <a href="#overview" class="sidebar-link active" data-section="overview">
                    <i class="fas fa-chart-pie"></i>
                    <span>Panoramica</span>
                </a>
                <a href="#my-events" class="sidebar-link" data-section="my-events">
                    <i class="fas fa-calendar-plus"></i>
                    <span>Eventi Creati</span>
                </a>
                <a href="#joined-events" class="sidebar-link" data-section="joined-events">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Eventi Iscritti</span>
                </a>
                <a href="#notifications" class="sidebar-link" data-section="notifications">
                    <i class="fas fa-bell"></i>
                    <span>Notifiche</span>
                    <span class="badge" id="notificationBadge">0</span>
                </a>
                <a href="/profile" class="sidebar-link">
                    <i class="fas fa-cog"></i>
                    <span>Impostazioni</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <button class="btn btn-primary btn-block" onclick="window.location.href='#create-event'" data-section="create-event">
                    <i class="fas fa-plus"></i> Crea Evento
                </button>
            </div>
        </aside>

        <!-- Content Area -->
        <div class="content-area">
            <!-- Alert Container -->
            <div id="alertContainer"></div>

            <!-- SEZIONE PANORAMICA -->
            <section id="overview-section" class="content-section active">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-chart-pie"></i>
                        Panoramica
                    </h1>
                    <p class="section-subtitle">Benvenuto nella tua dashboard personale</p>
                </div>

                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon blue">
                            <i class="fas fa-calendar-plus"></i>
                        </div>
                        <div class="stat-content">
                            <h3 id="createdEventsCount">0</h3>
                            <p>Eventi Creati</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon green">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                        <div class="stat-content">
                            <h3 id="joinedEventsCount">0</h3>
                            <p>Eventi Iscritti</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon purple">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-content">
                            <h3 id="totalAttendeesCount">0</h3>
                            <p>Totale Partecipanti</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon orange">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stat-content">
                            <h3 id="upcomingEventsCount">0</h3>
                            <p>Prossimi Eventi</p>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="quick-actions">
                    <h2>Azioni Rapide</h2>
                    <div class="actions-grid">
                        <button class="action-card" onclick="switchSection('create-event')">
                            <i class="fas fa-plus-circle"></i>
                            <span>Crea Nuovo Evento</span>
                        </button>
                        <button class="action-card" onclick="window.location.href='/'">
                            <i class="fas fa-search"></i>
                            <span>Esplora Eventi</span>
                        </button>
                        <button class="action-card" onclick="switchSection('my-events')">
                            <i class="fas fa-edit"></i>
                            <span>Gestisci Eventi</span>
                        </button>
                        <button class="action-card" onclick="window.location.href='/profile'">
                            <i class="fas fa-user-edit"></i>
                            <span>Modifica Profilo</span>
                        </button>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="recent-activity">
                    <h2>Attivit√† Recente</h2>
                    <div id="recentActivityList" class="activity-list">
                        <p class="empty-state">Nessuna attivit√† recente</p>
                    </div>
                </div>
            </section>

            <!-- SEZIONE EVENTI CREATI -->
            <section id="my-events-section" class="content-section">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-calendar-plus"></i>
                        I Miei Eventi
                    </h1>
                    <button class="btn btn-primary" onclick="switchSection('create-event')">
                        <i class="fas fa-plus"></i> Nuovo Evento
                    </button>
                </div>

                <div id="myEventsLoading" class="loading-state">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>Caricamento eventi...</p>
                </div>

                <div id="myEventsEmpty" class="empty-state" style="display: none;">
                    <i class="fas fa-calendar-times"></i>
                    <h3>Nessun evento creato</h3>
                    <p>Inizia a creare il tuo primo evento!</p>
                    <button class="btn btn-primary" onclick="switchSection('create-event')">
                        <i class="fas fa-plus"></i> Crea Evento
                    </button>
                </div>

                <div id="myEventsList" class="events-list"></div>
            </section>

            <!-- SEZIONE EVENTI ISCRITTI -->
            <section id="joined-events-section" class="content-section">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-ticket-alt"></i>
                        Eventi a cui Partecipo
                    </h1>
                    <button class="btn btn-primary" onclick="window.location.href='/'">
                        <i class="fas fa-search"></i> Esplora Altri Eventi
                    </button>
                </div>

                <div id="joinedEventsLoading" class="loading-state">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>Caricamento eventi...</p>
                </div>

                <div id="joinedEventsEmpty" class="empty-state" style="display: none;">
                    <i class="fas fa-ticket-alt"></i>
                    <h3>Nessun evento a cui sei iscritto</h3>
                    <p>Esplora gli eventi e iscriviti a quelli che ti interessano!</p>
                    <button class="btn btn-primary" onclick="window.location.href='/'">
                        <i class="fas fa-search"></i> Esplora Eventi
                    </button>
                </div>

                <div id="joinedEventsList" class="events-list"></div>
            </section>

            <!-- SEZIONE NOTIFICHE -->
            <section id="notifications-section" class="content-section">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-bell"></i>
                        Notifiche
                    </h1>
                    <button class="btn btn-secondary" onclick="markAllAsRead()">
                        <i class="fas fa-check-double"></i> Segna tutte come lette
                    </button>
                </div>

                <div id="notificationsList" class="notifications-list">
                    <p class="empty-state">Nessuna notifica</p>
                </div>
            </section>

            <!-- SEZIONE CREA EVENTO -->
            <section id="create-event-section" class="content-section">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-plus-circle"></i>
                        Crea Nuovo Evento
                    </h1>
                </div>

                <div class="form-container">
                    <form id="createEventForm" class="event-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="eventTitle">
                                    <i class="fas fa-heading"></i> Titolo Evento *
                                </label>
                                <input 
                                    type="text" 
                                    id="eventTitle" 
                                    class="form-control"
                                    placeholder="Es. Concerto Rock al Parco"
                                    required
                                    minlength="3"
                                    maxlength="100"
                                >
                            </div>

                            <div class="form-group">
                                <label for="eventCategory">
                                    <i class="fas fa-tags"></i> Categoria *
                                </label>
                                <select id="eventCategory" class="form-control" required>
                                    <option value="">Seleziona categoria</option>
                                    <option value="Musica">üéµ Musica</option>
                                    <option value="Sport">‚öΩ Sport</option>
                                    <option value="Arte">üé® Arte</option>
                                    <option value="Tecnologia">üíª Tecnologia</option>
                                    <option value="Cibo">üçï Cibo & Drink</option>
                                    <option value="Business">üíº Business</option>
                                    <option value="Formazione">üìö Formazione</option>
                                    <option value="Intrattenimento">üé≠ Intrattenimento</option>
                                    <option value="Altro">üé™ Altro</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="eventDescription">
                                <i class="fas fa-align-left"></i> Descrizione *
                            </label>
                            <textarea 
                                id="eventDescription" 
                                class="form-control"
                                placeholder="Descrivi il tuo evento..."
                                required
                                minlength="10"
                                maxlength="1000"
                                rows="4"
                            ></textarea>
                            <small class="form-hint">Minimo 10 caratteri, massimo 1000</small>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="eventDate">
                                    <i class="fas fa-calendar"></i> Data e Ora *
                                </label>
                                <input 
                                    type="datetime-local" 
                                    id="eventDate" 
                                    class="form-control"
                                    required
                                    min="<%= new Date().toISOString().slice(0, 16) %>"
                                >
                            </div>

                            <div class="form-group">
                                <label for="eventCapacity">
                                    <i class="fas fa-users"></i> Capienza *
                                </label>
                                <input 
                                    type="number" 
                                    id="eventCapacity" 
                                    class="form-control"
                                    placeholder="Es. 50"
                                    required
                                    min="1"
                                    max="10000"
                                >
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="eventLocation">
                                <i class="fas fa-map-marker-alt"></i> Luogo *
                            </label>
                            <input 
                                type="text" 
                                id="eventLocation" 
                                class="form-control"
                                placeholder="Es. Piazza Duomo, Milano"
                                required
                                minlength="3"
                                maxlength="200"
                            >
                        </div>

                        <div class="form-group">
                            <label for="eventImage">
                                <i class="fas fa-image"></i> URL Immagine
                            </label>
                            <input 
                                type="url" 
                                id="eventImage" 
                                class="form-control"
                                placeholder="https://example.com/image.jpg"
                            >
                            <small class="form-hint">URL dell'immagine di copertina (opzionale)</small>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-secondary" onclick="resetEventForm()">
                                <i class="fas fa-times"></i> Annulla
                            </button>
                            <button type="submit" class="btn btn-primary" id="createEventBtn">
                                <i class="fas fa-check"></i> Crea Evento
                            </button>
                        </div>
                    </form>
                </div>
            </section>

        </div>
    </main>

    <!-- JavaScript -->
    <script src="/js/utils.js"></script>
    <script src="/js/dashboard.js"></script>
    <script>
        // Verifica autenticazione
        if (!requireAuth()) {
            window.location.href = '/login';
        } else {
            checkAuthStatus();
        }
    </script>
</body>
</html>